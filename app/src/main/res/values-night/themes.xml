<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/Primary</item>
        <item name="android:windowBackground">@color/Primary</item>
    </style>

    <style name="TextInOperation">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TextInOperation.GreyText">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInOperation.WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="TextInButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextInButton.Button">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextInButton.Button.White_Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">onDigit</item>
    </style>

    <style name="TextInButton.Button.GreyText">
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="TextInButton.Button.Red_Text">
        <item name="android:textColor">@color/red_text</item>
    </style>


    <style name="Theme.Calculator" parent="Base.Theme.Calculator"></style>
</resources>